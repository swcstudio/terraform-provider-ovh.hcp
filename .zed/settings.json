{
  "tab_size": 4,
  "hard_tabs": true,
  "format_on_save": {
    "enabled": true,
    "external": {
      "command": "gofmt",
      "arguments": ["-w", "{buffer_path}"]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "staticcheck": true
      }
    }
  },
  "languages": {
    "Go": {
      "tab_size": 4,
      "hard_tabs": true
    }
  }
}
